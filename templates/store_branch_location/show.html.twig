{% extends 'base.html.twig' %}

{% block title %}Show "{{ store_branch_location.name }}"{% endblock %}

{% block breadcrambs %}
    <nav class="breadcrumb" aria-label="breadcrumbs">
        <ul>
            <li><a href="{{ path('store_branch_location_index') }}">Home</a></li>
            <li class="is-active"><a href="#" aria-current="page">Show "{{ store_branch_location.name }}"</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div class="columns">
        <div class="column is-two-fifths">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ store_branch_location.id }}</td>
                        <td>{{ include('store_branch_location/_delete_form.html.twig') }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td colspan="2">{{ store_branch_location.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td colspan="2">{{ store_branch_location.address }}</td>
                    </tr>
                    <tr>
                        <th>NumberOfEmployees</th>
                        <td colspan="2">{{ store_branch_location.numberOfEmployees }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td colspan="2">{{ store_branch_location.createdAt ? store_branch_location.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td colspan="2">{{ store_branch_location.updatedAt ? store_branch_location.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="button is-primary" href="{{ path('store_branch_location_edit', {'id': store_branch_location.id}) }}">Edit</a>
            <a class="button" href="{{ path('store_branch_location_index') }}">Back to list</a>
        </div>
    </div>
{% endblock %}
