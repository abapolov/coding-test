                <td>{{ store_branch_location.updatedAt ? store_branch_location.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('store_branch_location_show', {'id': store_branch_location.id}) }}">show</a>
                    <a href="{{ path('store_branch_location_edit', {'id': store_branch_location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('store_branch_location_new') }}">Create new</a>
{% endblock %}
