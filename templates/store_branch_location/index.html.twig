{% extends 'base.html.twig' %}

{% block title %}StoreBranchLocation index{% endblock %}

{% block body %}
    <h1>StoreBranchLocation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>NumberOfEmployees</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for store_branch_location in store_branch_locations %}
            <tr>
                <td>{{ store_branch_location.id }}</td>
                <td>{{ store_branch_location.name }}</td>
                <td>{{ store_branch_location.address }}</td>
                <td>{{ store_branch_location.numberOfEmployees }}</td>
